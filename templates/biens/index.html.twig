    <div class="row">
        {% for Biens in biens %}
            <div class="col-md-4">
                <div class="Biens-item text-center">
                    <img src="{{ asset('/uploads/'~ Biens.illustration) }}" alt="{{ Biens.title }}" class="img-fluid">
                    <h5>{{ Biens.title }}</h5>
                    <span class="Biens.description">{{ Biens.description }}</span>
                    <br><span class="Biens.price">{{ (Biens.price / 100)|number_format(2) }}â‚¬</span><br>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}